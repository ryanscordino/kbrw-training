<schema name="ryan_scordino_orders_schema" version="1.5">
  <fields>
    <!-- Basic order fields -->
    <field name="id"                          type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="remoteid"                    type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="type"                        type="string" indexed="true" stored="true" multiValued="false"/>

    <!-- Customer fields used in app.js -->
    <field name="custom.customer.full_name"   type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="custom.customer.email"       type="string" indexed="true" stored="true" multiValued="false"/>

    <!-- Billing address fields used in app.js -->
    <field name="custom.billing_address.street"      type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="custom.billing_address.city"        type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="custom.billing_address.postcode"    type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="custom.billing_address.country_id"  type="string" indexed="true" stored="true" multiValued="false"/>

    <field name="custom.magento.payment.account_status"       type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="custom.magento.payment.additional_information" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="custom.magento.total_item_count"          type="int" indexed="true" stored="true" multiValued="false"/>

    <field name="custom.items.item_id"            type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="custom.items.product_title"              type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="custom.items.quantity_to_fetch"          type="int" indexed="true" stored="true" multiValued="false"/>
    <field name="custom.items.price"          type="int" indexed="true" stored="true" multiValued="false"/>

    <field name="custom.created_at_int"              type="int" indexed="true" stored="true" multiValued="false"/>
    <field name="creation_date_index"         type="date" indexed="true" stored="true" multiValued="false"/>

    <!-- Shop and shipping fields -->
    <field name="custom.shop_id"              type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="custom.shipping_method"      type="string" indexed="true" stored="true" multiValued="false"/>

    <!-- Dynamic field for any other custom fields -->
    <dynamicField name="*" type="ignored" />

    <!-- Mandatory Riak Search fields -->
    <field name="_yz_id" type="_yz_str" indexed="true" stored="true" multiValued="false" required="true"/>
    <field name="_yz_ed" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
    <field name="_yz_pn" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
    <field name="_yz_fpn" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
    <field name="_yz_vtag" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
    <field name="_yz_rk" type="_yz_str" indexed="true" stored="true" multiValued="false"/>
    <field name="_yz_rt" type="_yz_str" indexed="true" stored="true" multiValued="false"/>
    <field name="_yz_rb" type="_yz_str" indexed="true" stored="true" multiValued="false"/>
    <field name="_yz_err" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
  </fields>

  <uniqueKey>_yz_id</uniqueKey>

  <types>
    <!-- YZ String: Used for non-analyzed fields -->
    <fieldType name="_yz_str" class="solr.StrField" sortMissingLast="true" />

    <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
    <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>

    <fieldType name="int" class="solr.TrieIntField" precisionStep="0" positionIncrementGap="0"/>
    <fieldType name="float" class="solr.TrieFloatField" precisionStep="0" positionIncrementGap="0"/>
    <fieldType name="long" class="solr.TrieLongField" precisionStep="0" positionIncrementGap="0"/>
    <fieldType name="double" class="solr.TrieDoubleField" precisionStep="0" positionIncrementGap="0"/>
    <fieldType name="date" class="solr.TrieDateField" precisionStep="0" positionIncrementGap="0"/>
    <fieldtype name="ignored" stored="false" indexed="false" multiValued="true" class="solr.StrField" />
  </types>
</schema>
